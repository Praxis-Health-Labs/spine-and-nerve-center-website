{
  "name": "spine-nerve-center-website",
  "version": "1.0.0",
  "description": "Spine and Nerve Center Riverview Website",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build:assets": "cpy 'src/assets/**/*' 'dist/assets' && cpy 'src/assets/data/**/*' 'dist/assets/data'",
    "build:css": "tailwindcss -i ./src/assets/css/input.css -o ./dist/assets/css/output.css --minify",
    "build:html": "node build-html.js",
    "build": "npm run clean && npm-run-all build:html build:css build:assets",
    "clean": "rimraf dist",
    "watch:html": "nodemon --watch src --ext html --exec 'node build-html.js'",
    "watch:css": "tailwindcss -i ./src/assets/css/input.css -o ./dist/assets/css/output.css --watch",
    "watch:assets": "cpy 'src/assets/**/*' 'dist/assets' --watch",
    "serve": "browser-sync start --server dist --files 'dist/**/*'",
    "dev": "npm-run-all --parallel watch:* serve",
    "firebase:login": "firebase login",
    "firebase:init": "firebase init hosting",
    "deploy": "npm run build && firebase deploy --only hosting",
    "deploy:preview": "npm run build && firebase hosting:channel:deploy preview"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "browser-sync": "^3.0.4",
    "cpy-cli": "^6.0.0",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "panini": "^1.7.2",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.1"
  }
}